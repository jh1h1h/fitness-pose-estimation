<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#000000"
        android:textColor="#FFFFFF"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="Hello Cyril! Have you been slacking off?"
        />
    <TextView
        android:id="@+id/user_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ready to get those gains?!?!"
        android:textSize="25sp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/logout"
        android:text="@string/logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#FFC06E"
        android:textColor="#000000"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="Are we gonna hit 9 days?!?!" />

    <Button
        android:id="@+id/dailychallengeButton"
        android:layout_width="164dp"
        android:layout_height="123dp"
        android:layout_gravity="center"
        android:text="Daily Challenge"
        android:background="@drawable/mybutton"
        android:layout_margin="5dp"/>

    <Button
        android:id="@+id/leaderboardButton"
        android:layout_width="164dp"
        android:layout_height="123dp"
        android:layout_gravity="center"
        android:text="Leaderboard"
        android:background="@drawable/mybutton"
        android:layout_margin="5dp"/>

    <Button
        android:id="@+id/rewardsButton"
        android:layout_width="164dp"
        android:layout_height="123dp"
        android:layout_gravity="center"
        android:text="My Rewards"
        android:background="@drawable/mybutton"
        android:layout_margin="5dp"/>

    <Button
        android:id="@+id/mystatsButton"
        android:layout_width="164dp"
        android:layout_height="123dp"
        android:layout_gravity="center"
        android:background="@drawable/mybutton"
        android:text="My Statistics"
        android:layout_margin="5dp"/>



</LinearLayout>