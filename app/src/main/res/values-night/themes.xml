<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.VisionFitV2" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->

        <!-- Primary colour brand -->
        <item name="colorPrimary">@color/darkGray</item>
        <item name="colorPrimaryVariant">@color/darkGray</item>
        <item name="colorOnPrimary">@color/black</item>

        <!-- Secondary colour brand -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar colour -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

    </style>

    <style name="ScreenBackground"><item name="android:background">@color/black</item></style>
    <style name="BackgroundStyle"><item name="android:backgroundTint">@color/black</item></style>
    <style name="TabBackground"><item name="android:background">@color/light_grey_400</item></style>
    <style name="TextColor"><item name="android:textColor">@color/light_grey_400</item></style>

</resources>
